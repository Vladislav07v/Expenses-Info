<div class="card p-3">
    <div class="row g-2">
        <div class="col-md-4">
            <input type="text" id="num1" class="form-control" placeholder="Enter First
Number" />
        </div>
        <div class="col-md-4">
            <input type="text" id="num2" class="form-control" placeholder="Enter Second
Number" />
        </div>
        <div class="col-md-4">
            <select id="operation" class="form-select">
                <option value="add">Add</option>
                <option value="subtract">Subtract</option>
                <option value="multiply">Multiply</option>
                <option value="divide">Divide</option>
                <option value="power">Power By</option>
            </select>
        </div>
    </div>
    <div class="mt-3 d-flex gap-2">
        <button type="button" class="btn btn-primary"
                onclick="performCalculation()">
            Calculate
        </button>
        <button type="button" class="btn btn-outline-secondary"
                onclick="clearCalc()">
            Clear
        </button>
    </div>
    <div id="result" class="alert alert-info mt-3" role="alert"
         style="display:none;"></div>
</div>
<script src="~/js/calculator.js"></script>