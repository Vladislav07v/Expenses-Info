<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpensesInfo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ExpensesInfo.styles.css" asp-append-version="true" />
    <style>
        /* Dark mode basic overrides */
        .dark-mode {
            background-color: #0f0f0f;
            color: #eaeaea;
        }
        .dark-mode .navbar {
            background-color: #111 !important;
            border-color: #222 !important;
        }
        .dark-mode .nav-link, .dark-mode .navbar-brand {
            color: #eaeaea !important;
        }
        .dark-mode .container {
            background-color: transparent;
        }
        .dark-mode .table tbody tr {
            background-color: #151515;
            color: #eaeaea;
        }
        .dark-mode table.table thead th {
            color: #eaeaea;
        }
        .dark-mode input, .dark-mode select, .dark-mode textarea {
            background-color: #1a1a1a;
            color: #eaeaea;
            border-color: #333;
        }
        .dark-toggle-btn {
            min-width: 44px;
            height: 36px;
            display: inline-flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="images/logo_small.png"></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Expenses">Expenses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="CreateEditExpense">Add expense</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="ExpenseTypes" asp-action="Index">Expense Types</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Playground" asp-action="Index">JS Playground</a>
                        </li>

                    </ul>
                    <div class="d-flex align-items-center">
                        <button id="dark-toggle" class="btn btn-outline-secondary dark-toggle-btn" title="Toggle dark/light">
                            🌙
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ExpensesInfo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // enable bootstrap tooltips
        (function(){
                try {
                var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
                tooltipTriggerList.forEach(function (el) {
                    new bootstrap.Tooltip(el)
                })
            } catch(e) { /* bootstrap not available or error */ }

            // re-init tooltips after partial DOM updates (simple observer)
            try {
                const observer = new MutationObserver(() => {
                    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
                    tooltipTriggerList.forEach(function (el) {
                        if (!el._bsTooltip) new bootstrap.Tooltip(el)
                    })
                });
                observer.observe(document.body, { childList: true, subtree: true });
            } catch(e) { }
        })();

        (function(){
            const toggle = document.getElementById('dark-toggle');
            if (!toggle) return;
            const root = document.documentElement || document.body;
            const key = 'expensesinfo-darkmode';
            function applyDark(dark) {
                if (dark) document.body.classList.add('dark-mode');
                else document.body.classList.remove('dark-mode');
                toggle.textContent = dark ? '☀️' : '🌙';
            }
            // initialize from localStorage
            const saved = localStorage.getItem(key);
            applyDark(saved === '1');
            toggle.addEventListener('click', function(){
                const isDark = document.body.classList.toggle('dark-mode');
                localStorage.setItem(key, isDark ? '1' : '0');
                applyDark(isDark);
            });
        })();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
