@using ExpensesInfo.Models
@model List<Expense>

@{
    ViewData["Title"] = "Expenses";
}
<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <hr />
    <h3>Total expenses: $@ViewBag.TotalExpenses</h3>
    <hr />
    <form method="get" class="row mb-3">
        <div class="col-md-4">
            <select name="typeId" class="form-select">
                <option value="">-- All types --</option>
                @foreach (var t in (List<ExpenseTypes>)ViewBag.Types)
                    {
                        if(ViewBag.SelectedTypeId != null && ViewBag.SelectedTypeId == t.Id)
                            {
                        <option value="@t.Id" selected="selected"> @t.Name</option>
                    }
                    else
                    {
                        <option value="@t.Id">@t.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-2">
            <button class="btn btn-secondary w-100" type="submit">Filter</button>
        </div>
        <div class="col-md-6 text-end">
            <a class="btn btn-success" asp-action="CreateEditExpense">Add expense</a>
        </div>
    </form>
    <hr />
    <div class="row mb-3 g-2">
        <div class="col-md-4">
            <input id="search-input" class="form-control" placeholder="Search by description..." />
        </div>
        <div class="col-md-3">
            <input id="date-from" type="date" class="form-control" placeholder="From date" />
        </div>
        <div class="col-md-3">
            <input id="date-to" type="date" class="form-control" placeholder="To date" />
        </div>
    </div>

    <h3>Total expenses: $@ViewBag.TotalExpenses</h3>
    <hr />
    
    <table class="table">
        <thread>
            <tr>
                <th data-sort="id" class="sortable">Id</th>
                <th data-sort="value" class="sortable" data-bs-toggle="tooltip" title="Сума в лева с 2 десетчни">Value</th>
                <th data-sort="description" class="sortable">Description</th>
                <th data-sort="date" class="sortable">Date</th>
                <th data-sort="type" class="sortable">Type</th>
                <th></th>
            </tr>
        </thread>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                foreach(var expense in Model)
                {
                    <tr class="expense-row" data-description="@expense.Description?.ToLowerInvariant()">
                        <td>@expense.Id</td>
                        <td data-bs-toggle="tooltip" title="Сума в лева с 2 десетчни">@expense.Value</td>
                        <td>@expense.Description</td>
                        <td>@expense.Date.ToString("yyyy-MM-dd")</td>
                        <td>@expense.ExpenseType?.Name</td>
                        <td>
                            <a class="btn btn-primary" asp-action="CreateEditExpense" asp-route-id="@expense.Id">Edit</a>
                            <a class="btn btn-danger delete-expense" asp-action="DeleteExpense" asp-route-id="@expense.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
<script>
  (function(){
    const input = document.getElementById('search-input');
    if (!input) return;
    const rows = Array.from(document.querySelectorAll('.expense-row'));
    const tbody = document.querySelector('table tbody');
    const headers = Array.from(document.querySelectorAll('th.sortable'));
    // track sort state per column
    const sortState = {};
    headers.forEach(h => sortState[h.dataset.sort] = 'none');
    const dateFrom = document.getElementById('date-from');
    const dateTo = document.getElementById('date-to');

    function applyFilter() {
      const q = input.value.trim().toLowerCase();
      const fromVal = dateFrom && dateFrom.value ? Date.parse(dateFrom.value) : null;
      const toVal = dateTo && dateTo.value ? Date.parse(dateTo.value) : null;
      rows.forEach(r => {
        const desc = r.getAttribute('data-description') || '';
        let matchesDesc = true;
        if (q) matchesDesc = desc.indexOf(q) !== -1;

        let matchesDate = true;
        if (fromVal || toVal) {
          const dateText = (r.children[3].textContent || '').trim();
          const rowTime = Date.parse(dateText);
          if (!Number.isFinite(rowTime)) {
            matchesDate = false;
          } else {
            if (fromVal && rowTime < fromVal) matchesDate = false;
            if (toVal && rowTime > toVal) matchesDate = false;
          }
        }

        if (matchesDesc && matchesDate) r.style.display = '';
        else r.style.display = 'none';
      });
    }
    input.addEventListener('input', applyFilter);
    if (dateFrom) dateFrom.addEventListener('change', applyFilter);
    if (dateTo) dateTo.addEventListener('change', applyFilter);
    // also color rows with value > 100 in bright pink
    function colorHighValues() {
      rows.forEach(r => {
        const cell = r.querySelector('td:nth-child(2)');
        if (!cell) return;
        const text = (cell.textContent || '').trim().replace(',', '.');
        const n = parseFloat(text);
        if (Number.isFinite(n) && n > 100) {
            r.style.backgroundColor = '#ff8fff';
        } else {
          r.style.backgroundColor = '';
        }
      });
    }
    colorHighValues();
    input.addEventListener('input', colorHighValues);

    // sorting
    function getCellValue(row, key) {
      switch (key) {
        case 'id': return parseInt((row.children[0].textContent||'').trim()) || 0;
        case 'value': return parseFloat((row.children[1].textContent||'').trim().replace(',', '.')) || 0;
        case 'description': return (row.children[2].textContent||'').trim().toLowerCase();
        case 'date': return (row.children[3].textContent||'').trim();
        case 'type': return (row.children[4].textContent||'').trim().toLowerCase();
      }
      return '';
    }

    function sortBy(key) {
      const state = sortState[key] === 'asc' ? 'desc' : 'asc';
      sortState[key] = state;
      // reset other headers
      Object.keys(sortState).forEach(k => { if (k !== key) sortState[k] = 'none'; });
      // sort rows
      const sorted = rows.slice().sort((a,b) => {
        const va = getCellValue(a, key);
        const vb = getCellValue(b, key);
        if (typeof va === 'number' && typeof vb === 'number') return state === 'asc' ? va - vb : vb - va;
        if (va < vb) return state === 'asc' ? -1 : 1;
        if (va > vb) return state === 'asc' ? 1 : -1;
        return 0;
      });
      // reattach
      sorted.forEach(r => tbody.appendChild(r));
      // recolor/highlight after reorder
      colorHighValues();
    }

    headers.forEach(h => {
      h.style.cursor = 'pointer';
      h.addEventListener('click', () => sortBy(h.dataset.sort));
    });
    // confirm before delete
    const deleteLinks = Array.from(document.querySelectorAll('.delete-expense'));
    deleteLinks.forEach(a => {
      a.addEventListener('click', function (e) {
        const ok = confirm('Are you sure you want to delete this expense?');
        if (!ok) e.preventDefault();
      });
    });
  })();
</script>
